#!/bin/bash
CFGDIR="$HOME/.config/public_ip"
FILE_HIST="$CFGDIR/public_ip_history"

if [[ $# = 0 ]]; then
	if [[ ! -f $FILE_HIST ]]; then
			# Si no existe
			mkdir -p $CFGDIR
		fi
		ip="`getip public`"
		text="`date +"%Y%m%d %H%M"` $ip"
		echo $text >> $FILE_HIST
		echo "  $ip guardada en $FILE_HIST"
	elif [[ $1 = "--list" || $1 = "-l" ]]; then
		# Show saved IP's
		cat $FILE_HIST
	else
		echo "$1: argumento invalido. Execution abort"
		exit 1
fi
