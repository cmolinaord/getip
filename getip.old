#!/bin/bash

if [[ $# = 0 ]]; then
	echo "You must specify 'public' or 'private' IP"
fi

if [[ $1 = "private" ]]; then
	# Get local network IP
	ip -4 -o addr show  | perl -lane 'print $F[3]'
elif [[ $1 = "public" ]]; then
	 #Get publib IP
	if [[ $2 = "full" ]]; then
		wget http://ipinfo.io/ -qO -
		echo -e "\n"
	else
		wget http://ipinfo.io/ip -qO -
	fi
fi
